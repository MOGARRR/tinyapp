<header>
  <nav class="navbar navbar-expand-md navbar-dark  bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarNavAltMarkup"
    aria-controls="navbarNavAltMarkup"
    aria-expanded="false"
    aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div><%=  %></div>

    <%if (!users[userCookie]) {%>
    <form class="form-inline" method="POST" action="/login">
      <div>
        <input
        class="form-control" 
        type="text"
        name="username"
        placeholder="username:"
        style="width: 300px; margin: 1em;"
        />
      </div>
      <button type="submit" class="btn">Login</button>
    </form>
      <%} else {%>
        <div class="navbar-nav">
         Logged in as: <%= users[userCookie].email %>
        </div>
        <form method="POST" action="/logout">
          <button type="submit" class="btn">Logout</button>
        </form>
        <% } %>


  </nav>
</header>